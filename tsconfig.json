{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "noImplicitAny": false,
      "baseUrl": "src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
  
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "ts-node": {
      "files": true
    },
  }